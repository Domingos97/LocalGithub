{
  "name": "local-github-manager",
  "version": "0.1.0",
  "description": "Local GitHub Project Manager - Auto-detect, install and run GitHub projects",
  "main": "dist/main/index.js",
  "homepage": "./",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "npx tsc -p tsconfig.main.json --watch",
    "dev:renderer": "npx vite",
    "dev:electron": "npx wait-on http://localhost:3000 && npx cross-env NODE_ENV=development npx electron dist/main/index.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "npx tsc -p tsconfig.main.json",
    "build:renderer": "npx vite build",
    "start": "npx electron dist/main/index.js",
    "start:dev": "electron-dev",
    "package": "electron-builder"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.13",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3",
    "electron-dev": "^1.0.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "wait-on": "^9.0.3"
  }
}
