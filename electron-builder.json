{
  "appId": "com.localgithub.app",
  "productName": "LocalGitHub Manager",
  "files": ["dist", "node_modules", "package.json", ".env"],
  "extraResources": [
    {
      "from": ".env",
      "to": ".env"
    }
  ],
  "directories": {
    "buildResources": "assets"
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
